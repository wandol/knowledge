.table-wrapper { 
	width:100%;
	overflow:hidden; 
	border: 1px solid #ccc; 
	border-radius: 4px; 
	padding: 0;
}

.table-wrapper.scroll {overflow-y:scroll;}
.table-wrapper.line20 {
	min-height:719px;
}

.table-wrapper.table-head {border-bottom:0; border-radius: 4px 4px 0 0;}
.table-wrapper.table-body {border-radius: 0 0 4px 4px;}

.table-wrapper.table-body tr:first-child > td {border-top:0;}

.table-area {border:0px; table-layout:fixed; margin-bottom:0;}

.table-area > thead {font-size:10pt;}
.table-area > thead > tr > th {
	height:34px; 
	text-align:center;
	background:#f9f9f9; 
	border-bottom:0; 
	vertical-align:middle;
	line-height:1.37; 
}

.table-area > thead > tr > th.sort {padding-left:0px;}  
.table-area > thead > tr > th.sort i.fa-sort {float:left; cursor:pointer; padding-left:4px;}

.table-area > thead > tr > th:first-child {border-left:0;}
.table-area > thead > tr > th:last-child {border-right:0;}

.table-area > tbody {font-size:9pt;}
.table-area > tbody > tr {}

.table-area > tbody > tr.empty > td {text-align:center;}

.table-area > tbody > tr:nth-of-type(odd) {background:#fff; }
.table-area > tbody > tr:nth-of-type(even) {background:#fcfcfc;}
 
.table-area > tbody > tr > td {
	height:34px; 
	vertical-align:middle; 
	padding:0 8px; 
	line-height:1.37; 
	text-overflow: ellipsis; 
	white-space: nowrap; 
	overflow: hidden;
}

.table-area > tbody > tr > td:first-child {border-left:0;}
.table-area > tbody > tr > td:last-child {border-right:0;}

.table-area > tbody > tr.last-item > td {border-bottom:0;}

.table-area > tbody > tr > td.has-error {background-color: #e6cbcb;}
.table-area > tbody > tr > td span.highlight {font-weight:bold; color:#d61414;}

.table-area > tbody > tr > td .btn {width:22px; height:22px; padding:0; font-size:11px; line-height:1.3}
.table-area > tbody > tr > td .btn:last-child {}
.table-area > tbody > tr > td .btn.has-error {background-color:#ea7370; border-color:#ea7370;}
.table-area > tbody > tr > td .btn.has-error:hover {background-color:#c62828; border-color:#c62828;}

.table-area > tbody > tr.active > td, 
	.table-area > tbody > tr:hover:not(.empty) > td,
	.table-area > tbody > tr:focus:not(.empty) > td,
	.table-area > tbody > tr.selected > td {background:#c4e2ff;}
	
/* pagination area at the bottom of the table */
.table-pager {text-align:center;}

.pagination {font-size:9pt; margin:7px 0 0 0;}
.pagination li > span, .pagination li > a {
	background-color: #fff; color: #9d958a; 
	border: 0px solid #ccc; border-radius: 20%;
	padding:2px 6px; margin:0 2px;
}

.pagination > li:first-child > a, .pagination >li:first-child > span {
	border-top-left-radius: 20%; border-bottom-left-radius:20%;
}
.pagination > li:last-child > a, .pagination >li:last-child > span {
	border-top-right-radius: 20%; border-bottom-right-radius:20%;
}

.pagination li > span:hover {background-color: #fff; color: #b1a799; border-color:#ccc;}
.pagination li > span:focus {background-color: #fff; color: #b1a799; border-color:#ccc;}
.pagination li > a:hover { background-color: #9d958a; color:#ffc107; border-color: #9d958a;} 
.pagination li > a:focus { background-color: #9d958a; color:#fff; border-color: #9d958a;}
.pagination li.active > span { background-color: #b1a799; color: #fff; border: 0px solid #ccc; }
.pagination li.active > span:hover {background-color: #b1a799; border-color: #ccc; }
.pagination li.active > span:focus { background-color: #b1a799; border-color: #ccc; }


/* filter area in table */
.table-area .filter-wrap {display:inline-block; position:absolute;}
.table-area .filter-wrap .dropdown-toggle {border:0px; background-color:#f9f9f9; display:table-header-group; cursor:pointer;}
.table-area .filter-wrap .dropdown-toggle i.fa-filter {margin-left:2px;}
.table-area .filter-wrap .drop-list {
	width:100%; 
	border-bottom:1px solid #ccc;
	border-radius:4px 4px 0px 0px;
	overflow-y: auto;
	font-size: 9pt;
	position: relative;
	margin-bottom:0px;
	padding-left:0px;
}
.table-area .filter-wrap .drop-list li {padding: 4px 8px;}
.table-area .filter-wrap .drop-list li input[type=checkbox] {vertical-align:middle; margin-top:2px;}
.table-area .filter-wrap .drop-list li label {font-weight: normal; margin-left:3px; margin-bottom:0; vertical-align:middle; cursor:pointer; width:120px; overflow-x:hidden; white-space:nowrap; text-overflow:ellipsis;}
.table-area .filter-wrap .buttons {width:100%; text-align:center; border-top:none; border-radius:0px 0px 4px 4px; margin-top:8px;}
